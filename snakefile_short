configfile: 'config.yml'

rule all:
    input:
        expand('abricate_amr/{sample}.tab',sample=config['samples']),
        expand('sprot_TF/{sample}.tsv',sample=config['samples'])

rule shovill:
    input:
        short_1='fastq/{sample}_1.fastq',
        short_2='fastq/{sample}_2.fastq'
    output:
        folder=directory('fasta_wgs'),
        fasta='fasta_wgs/{sample}.fasta'
    conda:
        'shovill'
    threads: 8
    params:
        assembler=ASSEMBLER
    shell:
        'shovill --outdir {output.folder} --R1 {input.short_1} --R2 {input.short_2} --assembler {params.assembler} --force'

rule abricate_plasmid:
    input:
        'fasta_wgs/{sample}.fasta'
    output:
        'abricate_plasmid/{sample}.tab'
    conda:
        'abricate'
    threads: 4
    shell:
        'abricate -db plasmidfinder {input} > {output}'

rule fasta_plasmid:
    input:
        'abricate_plasmid/{sample}.tab'
    output:
        'fasta_plasmid/{sample}.fasta'
    threads: 2
    script:
        'bin/scripts/contig_plasmid.py'

rule plasmid_amr:
    input:
        'fasta_plasmid/{sample}.fasta'
    output:
        'abricate_amr/{sample}.tab'
    conda:
        'abricate'
    threads: 4
    shell:
        'abricate {input} > {output}'

rule prokka:
    input:
        'fasta_plasmid/{sample}.fasta'
    output:
        folder=directory('prokka/{sample}'),
        tsv='prokka/{sample}/{sample}.tsv',
        ffn='prokka/{sample}/{sample}.ffn',
        faa='prokka/{sample}/{sample}.faa'
    conda:
        'prokka'
    threads: 8
    shell:
        'prokka --outdir {output.folder} --prefix {wildcards.sample} {input} --force'

rule wget_sprot:
    input:

    output:
        temp('bin/swissprot/uniprot_sprot.fasta')
    params:
        'https://ftp.uniprot.org/pub/databases/uniprot/current_release/knowledgebase/complete/uniprot_sprot.fasta.gz'
    threads: 2 
    shell:
        'wget {params} -P bin/swissprot && '
        'gunzip {output}.gz'

rule makeblastdb_sprot:
    input:
        uniprot_fasta='bin/swissprot/uniprot_sprot.fasta'
    output:
        phr='bin/swissprot/swissprot.phr',
        pin='bin/swissprot/swissprot.pin',
        psq='bin/swissprot/swissprot.psq'
    conda:
        'blast'
    params:
        db='bin/swissprot/swissprot'
    threads: 4        
    shell:
        'makeblastdb -dbtype prot -in {input.uniprot_fasta} -out {params.db}'

rule swissprot_blastx:
    input:
        ffn='prokka/{sample}/{sample}.ffn',
        phr='bin/swissprot/swissprot.phr',
        pin='bin/swissprot/swissprot.pin',
        psq='bin/swissprot/swissprot.psq'
    output:
        'blastx/{sample}.tsv'
    conda:
        'blast'
    params:
        db='bin/swissprot/swissprot',
        outfmt='6',
        evalue='0.1',
        max_hsps='1',
        max_seqs='10'
    threads: 8
    shell:
        'blastx -query {input.ffn} -db {params.db}'
        ' -out {output} -outfmt {params.outfmt} -evalue {params.evalue} -max_hsps {params.max_hsps} -max_target_seqs {params.max_seqs} -num_threads {threads}'

rule sprot_query:
    input:
        'blastx/{sample}.tsv'
    output:
        'sprot/{sample}.tsv'
    threads: 2
    script:
        'bin/scripts/sprot_query.py'

rule sprot_keep_best:
    input:
        'sprot/{sample}.tsv'
    output:
        'sprot_best/{sample}.tsv'
    threads: 2
    script:
        'bin/scripts/uniprot_keep_best.py'

rule find_TF:
    input:
        'sprot_best/{sample}.tsv'
    output:
        'sprot_TF/{sample}.tsv'
    threads: 2
    script:
        'bin/scripts/find_TF.py'